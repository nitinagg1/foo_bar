<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ServeSpeed.HelpVideo">

    <TextView
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save time"
        android:textSize="24sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/holo_orange_light"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_save"
        android:layout_below="@id/save"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/slow_motion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="slow motion"
        android:textSize="24sp"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/holo_orange_light"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slow_motion"
        android:src="@drawable/imageslow"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/next_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next frame"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="24sp"
        android:layout_centerInParent="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/next_frame"
        android:src="@drawable/ic_action_fast_forward"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Got it, dismiss this"
        android:onClick="dismiss"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_marginBottom="80dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text=" OKAY, Don't show this again"
        android:textColor="@android:color/holo_orange_light"
        android:onClick="dontShowAgain"/>

</RelativeLayout>
